<div class="container my-5">
  <h1 class="mb-4 text-center">Top Movies</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @movies.each do |movie| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if movie.poster_url.present? %>
            <%= image_tag(movie.poster_url, class: "card-img-top", alt: movie.title) %>
          <% else %>
            <img src="https://via.placeholder.com/500x750?text=No+Image" class="card-img-top" alt="No image">
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text text-truncate" style="max-height: 4.5em;"><%= movie.overview %></p>
            <div class="mt-auto">
              <span class="badge bg-warning text-dark">‚≠ê <%= movie.rating %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
