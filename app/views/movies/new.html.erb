<div class="container my-5">
  <h1 class="mb-4 text-center">Add a New Movie</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @movie, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter movie title" %>
        </div>

        <div class="mb-3">
          <%= f.label :overview, class: "form-label" %>
          <%= f.text_area :overview, class: "form-control", rows: 5, placeholder: "Write a brief description" %>
        </div>

        <div class="mb-3">
          <%= f.label :poster_url, class: "form-label" %>
          <%= f.text_field :poster_url, class: "form-control", placeholder: "Enter poster image URL" %>
        </div>

        <div class="mb-3">
          <%= f.label :rating, class: "form-label" %>
          <%= f.number_field :rating, class: "form-control", step: 0.1, placeholder: "Enter movie rating (0-10)" %>
        </div>

        <%= f.submit "Add Movie", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>
