<%= form_with model: @movie, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :overview, class: "form-label" %>
    <%= f.text_area :overview, class: "form-control", rows: 5 %>
  </div>

  <div class="mb-3">
    <%= f.label :poster_url, class: "form-label" %>
    <%= f.text_field :poster_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :rating, class: "form-label" %>
    <%= f.number_field :rating, class: "form-control", step: 0.1 %>
  </div>

  <%= f.submit "Update Movie", class: "btn btn-primary w-100" %>
<% end %>
